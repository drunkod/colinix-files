#!/usr/bin/env nix-shell
#!nix-shell -i python3 -p "python3.withPackages (ps: [ ps.sane-lib.bt ])" -p transmission
# vim: set filetype=python :

import argparse

from sane_bt import MediaMeta, TransmissionApi

def main():
    parser = argparse.ArgumentParser()
    TransmissionApi.add_arguments(parser)
    parser.add_argument("torrent", nargs="?", help="torrent id to show (acquire by first calling with no args)")

    args = parser.parse_args()
    bt_api = TransmissionApi.from_arguments(args)
    torrent = args.torrent

    if torrent:
        print(bt_api.info(torrent))
    else:
        print(bt_api.list_())

if __name__ == "__main__":
    main()
