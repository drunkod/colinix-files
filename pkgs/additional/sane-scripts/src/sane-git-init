#!/usr/bin/env nix-shell
#!nix-shell -i bash -p git

set -x

# initialize a repository with each of my machines configured as remotes.
# it's assumed each machine stores the repo at the same fs path

path=$PWD

git init
git remote add desko "alex@desko:$path"
git remote add lappy "alex@lappy:$path"
git remote add moby  "alex@moby:$path"
git remote add servo "alex@servo:$path"
